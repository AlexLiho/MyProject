= form_for @product do |f|
  - if @product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @product.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :additional
    = f.check_box :additional
  .field
    = f.label :price
    = f.number_field :price
  .field
    = f.label :unit
    = f.text_field :unit
  .field
    = f.label :lead_time
    = f.number_field :lead_time
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :visible_order
    = f.number_field :visible_order
  .field
    = f.label :deleted_at
    = f.datetime_select :deleted_at
  .actions
    = f.submit 'Save'
